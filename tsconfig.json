{
    "compilerOptions": {
        "module":"esnext",
        "noImplicitAny": true,
        "target": "es2017",
        "moduleResolution": "node",
        "lib": ["es2017", "dom"],
        "sourceMap": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "typeRoots": ["./types"]
    },
    "exclude": ["node_modules", "**/*.spec.ts"],
    "include": ["src/**/*", "_secret/ideas", "types", "global.d.ts"],
    "compileOnSave": true
}